<!DOCTYPE html>
<html lang="en">
<%- include('../inc/head'); -%>
<body>
<!-- header -->
<%- include('../inc/header'); -%>

<!-- content -->
<div class="container my-5">
    <% if (posts.length > 0 ) { %>
        <div class="row row-cols-xs-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 ">
            <% posts.forEach(post => { %>
                <div class="col">
                    <div class="card border-light mb-3 shadow" style="max-width: 18rem;">
                        <div class="card-header">
                            <p class="h4"><%= post.title %></p>
                            <small>Created at: <%= new Date(post.createdAt).getFullYear() +'/' + (new Date(post.createdAt).getMonth()+1) + '/' + new Date(post.createdAt).getDate()  %> </small>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Light card title</h5>
                            <p class="card-text"><%= post.body.slice(0,100) %> ...</p>
                            <a href="/posts/<%= post._id %>" > Read More</a>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">Last updated 3 mins ago</small>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="row">
            <div class="col-md-12">
                <h1>No posts found :) </h1>
            </div>
        </div>
    <% } %>
</div>

<!-- footer -->
<%- include('../inc/footer'); -%>

<!--scripts-->
<%- include('../inc/scripts'); -%>

</body>
</html>